            >

    <div class="d-flex justify-content-center signBody align-middle ">
      <div  style="margin-top:2px" class="card loginCard">
        <article class="card-body">
            <form asp-action="AddorEdit">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input style="background-color:lightyellow" asp-for="Title" required type="text" class="form-control editTitle" >
                </div>
                <div class="form-group" >
                    <textarea  style="background:none; height:450px" asp-for="Description"  class="form-control editBody" ></textarea>
                </div>

                <label style="margin-left:10px" for="coding"> Coding &nbsp;</label>
                <input id="coding" type="checkbox" value="Coding" onclick="myFunction1()" />
                <span> &nbsp; &nbsp; &nbsp;</span>

                <label for="webdev"> Web Dev &nbsp;</label>
