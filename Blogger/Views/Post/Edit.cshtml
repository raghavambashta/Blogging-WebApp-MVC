                <p id="result" type="hidden" style="display: none"></p> 
                <input id="final" asp-for="Author" style="display: none"/>


                <div style="margin-top:5px; margin-left:10px" class="form-group">
                    <p> Select a date: <input required asp-for="PostedOn" type="date"> </p>
                
                </div>

                <div class="form-group">
                    <button asp-action="AddorEdit" type="submit" class="btn btn-success btn-block"> Update </button>
                </div>
            </form>
        </article>
      </div>
    </div>
</body>


